<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:id="@+id/linear">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear12"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPatReading"
            android:text="Reading"
            android:padding="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textPatName"
            app:layout_constraintTop_toBottomOf="@+id/linear12"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPatName"
            android:text="PatientName"
            android:visibility="gone"
            android:padding="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear12"
            app:layout_constraintLeft_toRightOf="@+id/textPatReading"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textWgt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight Pressure"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/textTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:visibility="gone"
        android:padding="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/textHBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heart beat"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="156dp" />

    <Button
        android:id="@+id/buttonAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="187dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>